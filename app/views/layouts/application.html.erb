<!DOCTYPE html>
<html>
  <head>
    <title>One Degree Design</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/768c354273.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body data-controller= "loading-spinner" >
    <div class="loading" data-loading-spinner-target="spinner"></div>
    <div data-loading-spinner-target="main" data-controller="dark-mode" data-dark-mode-target="white" class="yellow-background" >
      <a href=""><i class="fa-solid fa-lightbulb dark-mode-bulb bulb-light" data-dark-mode-target="bulb" id="darkSwitch" data-action="click->dark-mode#switch"></i></a>
      <%= render 'shared/navbar' %>
      <%= render 'shared/flashes' %>
      <%= yield %>
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
