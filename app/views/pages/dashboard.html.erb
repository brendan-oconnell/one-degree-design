<div class="position-relative">
  <div class="container text-start h-100">

    <%# BANNER %>
    <div class="banner box w-100">
        <h1><span class="highlight" data-dark-mode-target="highlight">Hello</span> <%= @user.first_name %>, ðŸ‘‹</h1>
        <p> Compare all your website versions</p>
    </div>
    <div class="testyoursite text-center row">
      <div class="col-12 mb-3">
        <h2>Website search form</h2>
      </div>

        <%# SEARCH %>
        <div class="col-12 col-xl-6 col-lg-6 mx-auto w-100 ps-5 pe-5">
          <%# make a stimulus for the search %>

          <%= form_tag dashboard_path, class:' d-flex flex-grow-1', method: :get do %>
            <div class="search-form-control form-group w-100">
              <div class="search-bar d-flex w-100">
                <div class="pe-0 mb-3 search-bar-http-www-text search-form-control flex-shrink-1">
                  <h5 class="p-0 m-0">https://www.</h5>
                </div>
                <div class="search-bar-content flex-grow-1">
                  <%= text_field_tag :query,
                    params[:query],
                    class: "border-start-0 search-input form-control",
                    placeholder: " onedegreedesign.com"
                  %>
                  <%# <%= f.input :url, placeholder: "onedegreedesign.com", label: false, class:"border-start-0 search-input" %>
                </div>
            <%= submit_tag "Find my site now âŸ¶", class: "btn btn-flat mb-3 ms-3 btn-search" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>



<%# WEBSITE %>
