  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "one-degree-design.png", alt: "logo" %>
    <% end %>
    <div class="brand">One <span class="highlightnav">degree </span> design</div>
